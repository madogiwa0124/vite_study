{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@": ["./src/*"],
      "@js/*": ["./src/javascripts/*"],
      "@css/*": ["./src/styles/*"]
    }
  },
  "exclude": ["node_modules"]
}
